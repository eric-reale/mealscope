<div class="container-pagemover mx-5 px-5 pt-2">
  <%= link_to '<< Back', url_for(:back), class: "link-color" %>

</div>

<div class="container-fluid">
  <div class="row p-5 no-margin container-show-card mx-auto">
    <div class="col-md-6">
      <div class="justify-content-between py-4">
        <div class="row-title d-flex justify-content-between">
            <div class="icon-font d-flex justify-content-end">

            </div>
        </div>
            <div>
            <h2> <%= @restaurant.name  %> Informations <span class="show_restos_icons">
              <button  class="btn "><i class="far fa-edit"></i></i></button>
              <button id="sweet-alert-demo" class="btn "><i class="fas fa-trash"></i></button>
              <%= link_to "", restaurant_path(@restaurant)  , method: :delete, id:"delete-link", class: "hidden" %> </span> </h2>
            <p> Name: <%= @restaurant.name %> </p>
            <p> Address: <%= @restaurant.address %> </p>
            <p> Instagram Name: <%= @restaurant.instagram_handle %> </p>
          </div>
          <div class="cards-resto">
            <% @photos.each do |photo| %>
              <%= image_tag photo %>
            <% end %>
        </div>
        </div>
      </div>


  <div class="col-md-6">
    <div class="text-center py-4">
      <h2>User Data Analytics</h2>
    </div>


    <div class="row user-data-container-top">
      <div class='user-data-title'>
        <p>Number of Unique User Visits (total)</p>
     </div>
        <div class='user-data-data text-center'>
        <p>3,509</p>
     </div>
   </div>


    <div class="row user-data-container">
      <div class='user-data-title'>
        <p>Number of Unique User Visits (this week)</p>
     </div>
        <div class='user-data-data text-center'>
        <p>217</p>
     </div>
   </div>

    <div class="row user-data-container">
      <div class='user-data-title'>
        <p>Average Amount of Time Spent by User on Meal Page</p>
     </div>
        <div class='user-data-data text-center'>
        <p>1 min 17 seconds</p>
     </div>
   </div>

    <div class="row user-data-container">
      <div class='user-data-title'>
        <p>Weekly Increase of User Time Spent on Meal Page</p>
     </div>
        <div class='user-data-data text-center'>
        <p style='color: green'>+47%</p>
     </div>
   </div>

    <div class="row user-data-container">
      <div class='user-data-title'>
        <p>Most Searched for Term in Location (this week)</p>
     </div>
        <div class='user-data-data text-center'>
        <p>'avocado'</p>
     </div>
   </div>

  </div>


    <div class="resto_meal_reviews">
      <hr>
      <br>
      <h2> Meal Reviews </h2>
      <br>
          <% @restaurant.meals.each do |m|%>

            <div class ="resto_meal_reviews_card">
              <%= cl_image_tag m.mealphotos[0].photo if !m.mealphotos.empty? %>
              <h5> <%= m.name %> <%= m.check_rating(m.average_rating) %> <%= humanized_money_with_symbol(m.price) %> </h5>

                 <% m.reviews.each do |r| %>
                   <div class="review mt-0">
                      <div class='review-top d-flex justify-content-between border-shadow mt-0 pt-0 mb-2'>
                        <p> <%= r.content %> </p>
                        <p> <%= r.display_ratings %>  </p>
                      </div>
                    </div>
                    <% end %>


                    <div class="sponsor_btn">
                <%= form_tag orders_path do %>
                  <%= hidden_field_tag 'meal_id', m.id %>
                  <%= submit_tag 'Sponsor', class: 'btn btn-outline-dark btn-lg' %>
                  </div>
                  <% end %>


                   </div>


              <% end %>
      </div>
  </div>

</div>





