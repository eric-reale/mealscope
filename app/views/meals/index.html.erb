<div class="container">

  <h3> <%= params[:query] %></h3>
</div>



<div class="container-fluid">

    <div id="gallery" style="display:none; width: 70%">
      <% if @meals %>
        <% @meals.each do |m| %>
          <% m.mealphotos.each do |mealphoto| %>
          <%= link_to cl_image_tag(mealphoto.photo, alt:"#{m.name} <br> @#{m.restaurant.name}", class:""), meal_path(m)   %>
          <% end %>
        <% end %>
        <% end %>
    </div>
 </div>

