
<div class="container-fluid">

    <div id="gallery" style="display:none; width: 70%">
        <% @meals.each do |m| %>
          <% m.mealphotos.each do |mealphoto| %>
          <%= cl_image_tag mealphoto.photo, alt:"#{m.name}", class:"", :data => { :description => '<a href="www.goooldd.ccom"></a>' }   %>
          <% end %>
      <% end %>
    </div>
 </div>

