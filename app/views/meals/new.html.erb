<div class="banner d-flex align-items-end justify-content-left flex-column" style="width: 100%" id="banner">

<div class="form-right">
 <div class="d-flex justify-content">
  <div class="card justify-content-center text-center align-items-column m-auto py-4" style="width: 675px">


    <%= simple_form_for(@meal, html: { multipart: true }) do |f| %>


        <div class="form-inputs align-items-center m-auto pt-3" style="width: 75%;">
          <%= f.input :name,
                    label: false,
                    placeholder: 'Name' %>
          <%= f.input :restaurant,
                    label: false,
                    collection: Restaurant.all,
                    include_blank: 'Restaurant'%>
          <%= f.input :description,
                    label: false,
                    placeholder: 'Description',
                    :as => :text,
                    :input_html => { 'rows' => 4, 'cols' => 10 } %>
          <%= f.input :price,
                    label: false,
                    placeholder: "Price" %>
          <%= f.input :meal_type,
                    collection: Meal::MEAL_TYPE,
                    multiple: :true,
                    include_blank: false,
                    label: false,
                    include_blank: 'Choose a meal type' %>

          <div class="btn-group text-left">
            <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false" style="width: 100%">
              Dietary Restrictions
            </button>
            <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left p-5">
                        <div class="form-checkboxes">
                    <%= f.association :diet_meal_tags,
                              collection: DietTag::DIET_TAG,
                              as: :check_boxes,
                              label: false %>
                    </div>
            </div>
          </div>
          <div class='mt-3'></div>

          <div class="btn-group">
            <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false" style="width: 100%">
              Cuisines
            </button>
            <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-left p-5">
                    <div class="form-checkboxes">
                    <%= f.association :cuisine_meal_tags,
                              collection: CuisineTag::CUISINE_TAG,
                              as: :check_boxes,
                              legend: false %>
                    </div>
            </div>
          </div>




          <hr class="mx-auto mt-4 mb-3" style="width: 75%;">
          <%= f.file_field :meal_photos, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png"  %>
          <hr class="mx-auto mt-4 mb-3" style="width: 75%;">
          <div class="mx-auto my-3" style="width: 50%;">
          </div>
          <div class="form-actions">
          <%= f.button :submit, 'Add your meal!' , class: "btn btn-primary mb-2", style: "width: 100%;" %>

      <% end %>

  </div>
</div>
</div>
</div>
</div>
</div>
