<div class="row">
    <div class="col-md-6 meal-form-body-new">
    </div>


<div class="form-right col-md-6">
 <div class="d-flex justify-content form-right ">
  <div class="card justify-content-center text-center align-items-column py-4" style="width: 675px">


    <%= simple_form_for(@meal, html: { multipart: true }) do |f| %>
          <div><h2>Add a meal</h2></div>

        <div class="form-inputs align-items-center m-auto pt-3" style="width: 75%;">
          <%= f.input :name,
                    label: false,
                    placeholder: 'Name' %>
          <%= f.input :restaurant,
                    label: false,
                    input_html: {class: "opacity-style"},
                    collection: Restaurant.all,
                    include_blank: 'Restaurant'%>
          <%= f.input :description,
                    label: false,
                    placeholder: 'Description',
                    :as => :text,
                    :input_html => { 'rows' => 4, 'cols' => 10 } %>
          <%= f.input :price,
                    label: false,
                    placeholder: "Price" %>
  <div class='mt-3'></div>

<div class="container d-flex">
          <div class="container mx-auto text-left">
          <div class="btn-group dropup">
            <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false" style="width: 100%">
              Cuisines
            </button>
            <div class="dropdown-menu dropdown-menu-left dropdown-menu-lg-right p-5">
                    <div class="form-checkboxes-4">
                    <%= f.association :cuisine_meal_tags,
                              collection: CuisineTag::CUISINE_TAG,
                              as: :check_boxes,
                              legend: false %>
                    </div>
            </div>
          </div>
          </div>


        <div class='mt-3'></div>

        <div class="container mx-auto text-left">
          <div class="btn-group text-left dropup">
            <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false" style="width: 100%">
              Dietary Restrictions
            </button>
            <div class="dropdown-menu dropdown-menu-left dropdown-menu-lg-right p-5">
                        <div class="form-checkboxes-4">
                    <%= f.association :diet_meal_tags,
                              collection: DietTag::DIET_TAG,
                              as: :check_boxes,
                              label: false %>
                    </div>
            </div>
          </div>
          </div>

            <div class='mt-3'></div>
        <div class="container mx-auto text-left">
         <div class="btn-group text-left dropup">
            <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown" data-display="static" aria-haspopup="true" aria-expanded="false" style="width: 100%">
              Type of Meal
            </button>
            <div class="dropdown-menu dropdown-menu-left dropdown-menu-lg-right p-5">
                        <div class="form-checkboxes-4">
                    <%= f.association :meal_type_tags,
                              collection: MealType::MEAL_TYPE,
                              as: :check_boxes,
                              label: false %>
                   </div>
            </div>
          </div>
          </div>
</div>

          <hr class="mx-auto mt-4 mb-3" style="width: 75%;">
          <div><p>Add some photos ðŸ“· </p></div>
          <%= f.file_field :meal_photos, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png"  %>
          <hr class="mx-auto mt-4 mb-3" style="width: 75%;">
          <div class="mx-auto my-3" style="width: 50%;">
          </div>
          <div class="form-actions">
          <%= f.button :submit, 'Add your meal!' , class: "btn btn-primary mb-2", style: "width: 100%;" %>

      <% end %>

  </div>
</div>
</div>
</div>
</div>
