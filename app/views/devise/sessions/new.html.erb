
<div class="banner d-flex align-items-end justify-content-center flex-column" id="banner">


  <div class="loginform">
        <h2>Log in</h2>


        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs" id="login">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", id: "devise-login-email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", id: "devise-login-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions" id="sweet-alert-demo">
            <%= f.button :submit, "Log in", class: "btn btn-outline-dark btn-lg" %>
          </div>

          <div class="linkstoother">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link-login" %>
            <%= link_to "Forgot your password?", user_registration_path, class: "nav-link-login" %>
          </div>
        <% end %>
    </div>
</div>
